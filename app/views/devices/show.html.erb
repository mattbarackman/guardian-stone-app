<% model_class = Device %>
<div class="row page-header">
	<h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>


<div class="row">
	<dl>
		<dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
		<dd><%= @device.name %></dd>
		<dt><strong><%= model_class.human_attribute_name(:particle_id) %>:</strong></dt>
		<dd><%= @device.particle_id %></dd>
<!-- 		<dt><strong><%= model_class.human_attribute_name(:access_token) %>:</strong></dt>
		<dd><%= @device.access_token %></dd>
 -->		<dt><strong><%= model_class.human_attribute_name(:power_level) %>:</strong></dt>
		<dd><%= "#{@device.power_level}%"%></dd>
	</dl>
</div>

<div class="row">
	<%= link_to 'Dashboard', device_dashboard_path(@device), :method => :get, :class => 'btn btn-default' %>
	<%= link_to t('.back', :default => t("helpers.links.back")),
								devices_path, :class => 'btn btn-default', :method => :get  %>
	<%= link_to t('.edit', :default => t("helpers.links.edit")),
								edit_device_path(@device), :class => 'btn btn-default', :method => :get %>
	<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
								device_path(@device),
								:method => 'delete',
								:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
								:class => 'btn btn-danger' %>	
</div>



