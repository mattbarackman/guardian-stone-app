<% model_class = Device %>
<div class="page-header">
	<h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
	<dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
	<dd><%= @device.name %></dd>
	<dt><strong><%= model_class.human_attribute_name(:particle_id) %>:</strong></dt>
	<dd><%= @device.particle_id %></dd>
	<dt><strong><%= model_class.human_attribute_name(:access_token) %>:</strong></dt>
	<dd><%= @device.access_token %></dd>
</dl>

<%= button_to 'Turn On', device_on_path(@device), :method => :post, :remote => true, :class => 'btn btn-default' %>
<%= button_to 'Turn Off', device_off_path(@device), :method => :post, :remote => true, :class => 'btn btn-warning' %>
<%= button_to 'Battery Level', device_battery_path(@device), :method => :get, :class => 'btn btn-default' %>

<%= button_to t('.back', :default => t("helpers.links.back")),
							devices_path, :class => 'btn btn-default', :method => :get  %>
<%= button_to t('.edit', :default => t("helpers.links.edit")),
							edit_device_path(@device), :class => 'btn btn-default', :method => :get %>
<%= button_to t('.destroy', :default => t("helpers.links.destroy")),
							device_path(@device),
							:method => 'delete',
							:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
							:class => 'btn btn-danger' %>
